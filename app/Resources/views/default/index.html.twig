{% extends 'base.html.twig' %}

{% block body %}
    <div id="wrapper">
        <div id="container">
            <div id="welcome">
                <h1>Module de diff</h1>
            </div>
            <div>
                {% for class, classDiff in diffs %}
                    <h2>{{ class }}</h2>
                    <h3>{{'title.stats' | trans }}</h3>
                    <ul>
                    {% for fieldname, stats in classDiff.fields %}
                        <li>{{ ('label.'~fieldname)|trans) }}{{fieldname}} : {{stats.compt}} diff√©rences</li>
                    {% endfor %}
                    </ul>
                    <h3>Datas</h3>
                    {% for id, fields in classDiff.records %}
                        <h4>{{ id }}</h4>
                        <ul>
                        {% for fieldname, data in fields %}
                            <li>{{fieldname}}
                                <ul>
                                    <li>R : {{ data.recolnat.timestamp is defined ? data.recolnat|date('m/d/Y') : data.recolnat }}</li>
                                    <li>I : {{ data.institution.timestamp is defined ? data.institution|date('m/d/Y') : data.institution }}</li>
                                </ul>
                            </li>
                        {% endfor %}
                        </ul>
                    {% endfor %}
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
<style>
    body { background: #F5F5F5; font: 14px/1.5 sans-serif; }
    h1, h2 { line-height: 1.2; margin: 0 0 .5em; }
    h1 { font-size: 36px; }
    h2 { font-size: 26px; margin-bottom: 1em; }
    h3 { font-size: 20px; margin-bottom: 1em; }
    h4 { font-size: 16px }
    p { margin: 0 0 1em 0; }
    a { color: #0000F0; }
    a:hover { text-decoration: none; }
    code { background: #F5F5F5; max-width: 100px; padding: 2px 6px; word-wrap: break-word; }
    #wrapper { background: #FFF; margin: 1em auto; max-width: 800px; width: 95%; }
    #container { padding: 2em; }
    #welcome, #status { margin-bottom: 2em; }
    #welcome h1 span { display: block; font-size: 75%; }
    #icon-status, #icon-book { float: left; height: 64px; margin-right: 1em; margin-top: -4px; width: 64px; }
    #icon-book { display: none; }

    @media (min-width: 768px) {
        #wrapper { width: 80%; margin: 2em auto; }
        #icon-book { display: inline-block; }
        #status a, #next a { display: block; }

        @-webkit-keyframes fade-in { 0% { opacity: 0; } 100% { opacity: 1; } }
        @keyframes fade-in { 0% { opacity: 0; } 100% { opacity: 1; } }
        .sf-toolbar { opacity: 0; -webkit-animation: fade-in 1s .2s forwards; animation: fade-in 1s .2s forwards;}
    }
</style>
{% endblock %}
