{% set checked = "" %}
{% if choices is defined and choices is not empty %}
    {% if choices[className][relationId][fieldName] is defined %}
        {% if choices[className][relationId][fieldName] == value %}
            {% set checked = "checked" %}
        {% endif %}
    {% endif %}
{% endif %}

<input type="radio" {{checked}} data-class="{{className}}" data-type='diff-field' data-relationid="{{relationId}}" data-fieldname="{{fieldName}}" name="{{relationId}}[{{fieldName}}]" value="{{value}}">